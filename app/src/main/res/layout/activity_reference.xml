                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/constraint"
                    app:layout_constraintStart_toStartOf="@id/constraint"
                    app:layout_constraintTop_toBottomOf="@id/image_view_reference6" />

                <ImageView
                    android:id="@+id/image_view_reference7"
                    android:layout_width="500dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/three_of_a_kind"
                    app:layout_constraintEnd_toEndOf="@id/constraint"
                    app:layout_constraintStart_toStartOf="@id/constraint"
                    app:layout_constraintTop_toBottomOf="@id/text_view_reference6" />

                <TextView
                    android:id="@+id/text_view_reference7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#7: Three of a Kind"
