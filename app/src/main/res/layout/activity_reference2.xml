<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caroline.realpoker.Reference">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_view_reference_1"
                android:layout_marginTop="15dp"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:src="@drawable/royal_flush"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toTopOf="@id/constraint" />

            <TextView
                android:id="@+id/text_view_reference1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="#1: Royal Flush"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@id/image_view_reference_1" />

            <ImageView
                android:id="@+id/image_view_reference2"
                android:layout_marginTop="15dp"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:src="@drawable/straight_flush"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintStart_toEndOf="@+id/image_view_reference_1"
                app:layout_constraintTop_toTopOf="@id/constraint" />

            <TextView
                android:id="@+id/text_view_reference2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:text="#2: Straight Flush"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/text_view_reference1"
                app:layout_constraintTop_toBottomOf="@id/image_view_reference2" />

            <ImageView
                android:id="@+id/image_view_reference_3"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/four_of_a_kind"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference1" />

            <TextView
                android:id="@+id/text_view_reference3"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:text="#3: Four of a Kind "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/image_view_reference_3" />

            <ImageView
                android:id="@+id/image_view_reference4"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/straight_flush"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/image_view_reference_3"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference2" />

            <TextView
                android:id="@+id/text_view_reference4"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:text="#4: Straight Flush"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/text_view_reference3"
                app:layout_constraintTop_toBottomOf="@id/image_view_reference4" />

            <ImageView
                android:id="@+id/image_view_reference_5"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/flush"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference3" />

