                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/text_view_reference7"
                app:layout_constraintTop_toBottomOf="@id/image_view_reference8" />

            <ImageView
                android:id="@+id/image_view_reference_9"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/one_pair"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference7" />

            <TextView
                android:id="@+id/text_view_reference9"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:text="#9: One Pair "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/image_view_reference_9" />

            <ImageView
                android:id="@+id/image_view_reference10"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/high_card"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/image_view_reference_9"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference8" />

            <TextView
                android:id="@+id/text_view_reference10"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:text="#10: High Card"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/text_view_reference9"
                app:layout_constraintTop_toBottomOf="@id/image_view_reference10" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
