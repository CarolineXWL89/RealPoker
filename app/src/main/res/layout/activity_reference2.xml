                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/image_view_reference_5" />

            <ImageView
                android:id="@+id/image_view_reference6"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/straight"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/image_view_reference_5"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference4" />

            <TextView
                android:id="@+id/text_view_reference6"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:text="#6: Straight"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toEndOf="@+id/text_view_reference5"
                app:layout_constraintTop_toBottomOf="@id/image_view_reference6" />

            <ImageView
                android:id="@+id/image_view_reference_7"
                android:layout_width="246dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/three_of_a_kind"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toBottomOf="@+id/text_view_reference5" />

            <TextView
                android:id="@+id/text_view_reference7"
                android:layout_width="wrap_content"
